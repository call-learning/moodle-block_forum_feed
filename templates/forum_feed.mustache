{{!
    @template block_forum_feed/forum_feed

    This template renders a simple progress bar.

    Example context (json):
    {
        "posts": [ {
            "userfullname": "Emilie ...",
            "subject": "Biodiversité",
            "subjectlink": "Biodiversité",
            "message": "AAAAAA...",
            "timestamp": "123242345",
            "morelink": "url to full context",
            "uniqid": "123242345",
            "userpicture": "<img src='https://moodle.org/pluginfile.php/1/user/icon/boost/f1?rev=1' class='userpicture' alt='User picture'>",
            "morelink": "http://localhost/moodle/mod/forum/discuss.php?d=1"
            }
        ]
    }
}}

<div id="block-forum-feed-{{uniqid}}" class="block-forum-feed block-cards">
    {{#posts}}
        <div class="card box-shadow rounded m-2 p-3">
            <div class="card-title d-flex flex-row">
                <div class="m-2">{{{userpicture}}}</div>
                <div class="flex-column">
                    <div>
                        {{userfullname}}&nbsp;{{#str}}in, block_forum_feed{{/str}}
                        <a class="forum-feed-subject" href="{{subjectlink}}">
                            {{subject}}
                        </a>
                    </div>
                    <div>
                        <span class="feed-date">
                        {{#userdate}} {{timestamp}}, {{#str}} strftimedatetime, core_langconfig {{/str}} {{/userdate}}
                        </span>
                    </div>
                </div>

            </div>
            <div class="card-body d-flex flex-column">
                <div class="card-text">
                    {{{message}}}
                </div>
                <div class="align-self-end">
                    <a href="{{morelink}}" class="pt-2">{{#str}}more, block_forum_feed{{/str}}</a>
                </div>
            </div>
        </div>
    {{/posts}}
</div>