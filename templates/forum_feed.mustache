{{!
    @template block_forum_feed/block

    This template renders a simple progress bar.

    Example context (json):
    {
        "posts": [ {
            "userfullname": "Emilie ...",
            "subject": "Biodiversité",
            "subjectlink": "Biodiversité",
            "message": "AAAAAA...",
            "timestamp": "123242345",
            "morelink": "url to full context"
            }
        ]
    }
}}

<div id="block-forum-feed-{{uniqid}}" class="block-forum-feed block-cards">
    {{#posts}}
        <div class="card box-shadow rounded m-2">
            <div class="card-body">
                <h5 class="card-title">
                    {{userfullname}}&nbsp;{{#str}}in, block_forum_feed{{/str}}
                    <a class="forum-feed-subject" href="{{subjectlink}}">
                        {{subject}}
                    </a>
                </h5>
                <p class="card-text">
                    {{{message}}}
                    <a href="{{morelink}}">{{#str}}more, block_forum_feed{{/str}}</a>
                </p>
            </div>
        </div>
    {{/posts}}
</div>